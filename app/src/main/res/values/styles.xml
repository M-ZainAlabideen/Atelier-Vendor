<resources>

    <!-- Base application theme. -->
    <style name="MainAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:maxWidth">300dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:fontFamily">@font/droid_arabic_kufi</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>
