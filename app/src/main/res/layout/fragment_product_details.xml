<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fragment_product_details_iv_productImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/placeholder_pro_details" />

    <TextView
        android:id="@+id/fragment_product_details_tv_name"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/droid_arabic_kufi_bold"
        android:gravity="center"
        android:textColor="@color/darkGray"
        android:text="فساتين زفاف - أجمل فساتين الزفاف من مصممين عرب وعالميين"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_product_details_iv_productImg" />

    <TextView
        android:id="@+id/fragment_product_details_tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/droid_arabic_kufi"
        android:text="هذا النص هو مثال لنص يمكن أن يستبدل في نفسالمساحةلقدتم توليد هذا النص من مولد النص العربى، حيث يمكنك أن تولد مثل هذا النص للتوصيل لباب المنزل مجانا"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_product_details_tv_name" />

    <TextView
        android:id="@+id/fragment_product_details_tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/droid_arabic_kufi"
        android:text="13 قطعة"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@+id/fragment_product_details_tv_description"
        app:layout_constraintTop_toBottomOf="@+id/fragment_product_details_tv_description" />

    <TextView
        android:id="@+id/fragment_product_details_tv_price"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/droid_arabic_kufi_bold"
        android:text="93.500 KD"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_product_details_tv_quantity"
        app:layout_constraintEnd_toEndOf="@+id/fragment_product_details_tv_description"
        app:layout_constraintTop_toTopOf="@+id/fragment_product_details_tv_quantity" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/lightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_product_details_tv_price" />

        <TextView
            android:id="@+id/fragment_product_details_tv_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/droid_arabic_kufi"
            android:text="details........"
            android:textColor="@color/darkGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view" />

